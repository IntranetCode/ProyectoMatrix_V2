@{
    Layout = null;
    ViewData["Title"] = "Intranet - NS Group";
    var random = new Random();
    var nombreUsuario = Context.Session.GetString("Username") ?? "Invitado";
    var nombreEmpresa = Context.Session.GetString("EmpresaNombre") ?? "NS Group";
    var logoEmpresa = Context.Session.GetString("EmpresaLogo") ?? "default-logo.png";

    var empresaId = Context.Session.GetString("EmpresaId") ?? "default";
    var cssFile = empresaId switch
    {
        "1" => "LoginNutriservicios.css",
        "2" => "LoginNS_Equipo.css",
        "3" => "LoginBSP.css",
        "4" => "LoginHypor.css",
        _ => "site.css"
    };

    // Cargar menú desde sesión
    var menuJson = Context.Session.GetString("MenuItems");
    var menuItems = !string.IsNullOrEmpty(menuJson)
        ? System.Text.Json.JsonSerializer.Deserialize<List<ProyectoMatrix.Models.MenuItemViewModel>>(menuJson)
        : new List<ProyectoMatrix.Models.MenuItemViewModel>();
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="@(Url.Content($"~/css/{cssFile}"))" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="~/css/dmenu.css" rel="stylesheet" />
    <script src="~/js/acmenu.js" asp-append-version="true"></script>

    <!-- ===== ESTILOS DINÁMICOS PARA FONDO POR EMPRESA ===== -->
    <style>
        /* Fondo dinámico que usa las variables CSS de cada empresa */
        body {
            /* Usar las variables de color de cada empresa para crear un fondo sutil */
            background: linear-gradient(135deg, var(--color-primario, #f8fafc) 0%, var(--color-secundario, #f1f5f9) 25%, var(--color-terciario, #e2e8f0) 50%, var(--color-primario, #f8fafc) 100% ) !important;
            background-size: 400% 400% !important;
            animation: gradientShift 20s ease infinite !important;
            min-height: 100vh !important;
            /* Agregar una capa semi-transparente para no interferir con la legibilidad */
            background-attachment: fixed !important;
        }

            /* Agregar overlay sutil para mejor legibilidad */
            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(255, 255, 255, 0.85);
                z-index: -1;
                pointer-events: none;
            }

        /* Animación suave del gradiente */
        @@keyframes gradientShift {
            0%

        {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }

        }

        /* Asegurar que el sidebar y contenido tengan fondos apropiados */
        .sidebar {
            background: rgba(255, 255, 255, 0.95) !important;
            backdrop-filter: blur(10px) !important;
            border-right: 1px solid rgba(0, 0, 0, 0.1) !important;
        }

        .main-content {
            background: rgba(255, 255, 255, 0.7) !important;
            backdrop-filter: blur(5px) !important;
            border-radius: 12px !important;
            margin: 1rem !important;
            padding: 2rem !important;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1) !important;
        }

        /* Mejorar la navbar superior */
        .top-navbar {
            background: var(--color-primario, #6366f1) !important;
            backdrop-filter: blur(10px) !important;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2) !important;
        }

        /* Para empresas específicas - versiones más intensas */
        @@media screen {
            /* Nutriservicios - Fondo más vibrante */
            body .empresa-1

        {
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 25%, #7c3aed 50%, #a855f7 75%, #9333ea 100%) !important;
            background-size: 400% 400% !important;
            animation: gradientShift 15s ease infinite !important;
        }

        body.empresa-1::before {
            background: rgba(255, 255, 255, 0.90) !important;
        }

        }

        /* Responsive - en móviles hacer el fondo más sutil */
        @@media (max-width: 768px) {
            body:: before

        {
            background: rgba(255, 255, 255, 0.95) !important;
        }

        .main-content {
            margin: 0.5rem !important;
            padding: 1rem !important;
        }

        }
    </style>

    @RenderSection("Estilos", required: false)
</head>

<body class="empresa-@empresaId">
    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <a href="#" class="sidebar-brand">
                @if (!string.IsNullOrEmpty(logoEmpresa) && logoEmpresa != "default-logo.png")
                {
                    <img src="~/imagenes/@logoEmpresa" alt="@nombreEmpresa" class="sidebar-logo" />
                }
                else
                {
                    <i class="fas fa-building"></i>
                }
                @nombreEmpresa
            </a>
        </div>

        <div class="sidebar-menu">
            <!-- Menú Principal Dinámico -->
            <div class="menu-section">
                <div class="menu-section-title">Sistema</div>

                @foreach (var item in menuItems)
                {
                    <div class="menu-item">
                        <a href="@item.Url" class="menu-link">
                            <i class="fas @item.Icono"></i> @item.NombreMenu
                        </a>
                        @if (item.Submenus != null && item.Submenus.Count > 0)
                        {
                            <div class="submenu">
                                @foreach (var sub in item.Submenus)
                                {
                                    <a href="@sub.Url" class="submenu-link">@sub.Nombre</a>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </nav>

    <!-- Main Content Wrapper -->
    <div class="main-wrapper">
        <!-- Top Navigation -->
        <nav class="top-navbar">
            <div class="navbar-content">
                <div class="navbar-left">
                    <button class="mobile-toggle" id="mobileToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h1 class="navbar-title">Universidad NSgroup</h1>
                    <div class="navbar-links">
                        <a href="#" class="navbar-link">Página NS Group</a>
                        <a href="#" class="navbar-link">Recursos Humanos</a>
                        <a href="#" class="navbar-link">Directorio</a>
                    </div>
                </div>
                <div class="navbar-right">
                    <div class="user-menu">
                        <button class="user-toggle" id="userToggle">
                            <div class="user-avatar">
                                @(nombreUsuario.Substring(0, 1).ToUpper())
                            </div>
                            <div class="user-info">
                                <div class="user-name">@nombreUsuario</div>
                                <div class="user-role">Administrador</div>
                            </div>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="user-dropdown" id="userDropdown">
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-user"></i> Mi Perfil
                            </a>
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-cog"></i> Configuración
                            </a>
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-bell"></i> Notificaciones
                            </a>
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-question-circle"></i> Ayuda
                            </a>
                            <a href="/Menu/Logout" class="dropdown-item">
                                <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>