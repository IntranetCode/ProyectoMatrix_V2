    <script src="~/js/acmenu.js" asp-append-version="true"></script>
    <!-- ===== ESTILOS DINÁMICOS PARA FONDO POR EMPRESA ===== -->
    <style>
        /* Fondo dinámico que usa las variables CSS de cada empresa */
        body {
            /* Usar las variables de color de cada empresa para crear un fondo sutil */
            background: linear-gradient(135deg, var(--color-primario, #f8fafc) 0%, var(--color-secundario, #f1f5f9) 25%, var(--color-terciario, #e2e8f0) 50%, var(--color-primario, #f8fafc) 100% ) !important;
            background-size: 400% 400% !important;
            animation: gradientShift 20s ease infinite !important;
            min-height: 100vh !important;
            /* Agregar una capa semi-transparente para no interferir con la legibilidad */
            background-attachment: fixed !important;
        }

            /* Agregar overlay sutil para mejor legibilidad */
            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(255, 255, 255, 0.85);
                z-index: -1;
                pointer-events: none;
            }

        /* Animación suave del gradiente */
        @@keyframes gradientShift {
            0%

        {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }

        }

        /* Asegurar que el sidebar y contenido tengan fondos apropiados */
        .sidebar {
            background: rgba(255, 255, 255, 0.95) !important;
            backdrop-filter: blur(10px) !important;
            border-right: 1px solid rgba(0, 0, 0, 0.1) !important;
        }

        .main-content {
            background: rgba(255, 255, 255, 0.7) !important;
            backdrop-filter: blur(5px) !important;
            border-radius: 12px !important;
            margin: 1rem !important;
            padding: 2rem !important;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1) !important;
        }

        /* Mejorar la navbar superior */
        .top-navbar {
            background: var(--color-primario, #6366f1) !important;
            backdrop-filter: blur(10px) !important;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2) !important;
        }

        /* Para empresas específicas - versiones más intensas */
        @@media screen {
            /* Nutriservicios - Fondo más vibrante */
            body .empresa-1

        {
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 25%, #7c3aed 50%, #a855f7 75%, #9333ea 100%) !important;
            background-size: 400% 400% !important;
            animation: gradientShift 15s ease infinite !important;
        }

        body.empresa-1::before {
            background: rgba(255, 255, 255, 0.90) !important;
        }

        }

        /* Responsive - en móviles hacer el fondo más sutil */
        @@media (max-width: 768px) {
            body:: before

        {
            background: rgba(255, 255, 255, 0.95) !important;
        }

        .main-content {
            margin: 0.5rem !important;
            padding: 1rem !important;
        }


        }
    </style>
    @RenderSection("Estilos", required: false)

</head>

<body class="empresa-@empresaId">
    <!-- Solo Topbar sin Sidebar -->
