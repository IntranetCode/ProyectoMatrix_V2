@model List<ProyectoMatrix.Models.MenuModel>

@{
    Layout = null;
    ViewData["Title"] = "Intranet - NS Group";
    var random = new Random();
    var nombreUsuario = Context.Session.GetString("Username") ?? "Invitado";
    var nombreEmpresa = Context.Session.GetString("EmpresaNombre") ?? "NS Group";
    var logoEmpresa = Context.Session.GetString("EmpresaLogo") ?? "default-logo.png";

    var empresaId = Context.Session.GetString("EmpresaId") ?? "default";
    var cssFile = empresaId switch
    {
        "1" => "LoginNutriservicios.css",
        "2" => "LoginNS_Equipo.css",
        "3" => "LoginBSP.css",
        "4" => "LoginHypor.css",
        _ => "site.css"
    };

    // *** CONFIGURACIÓN DE ENLACES SHAREPOINT ***
    // Aquí puedes cambiar fácilmente los enlaces de SharePoint
    var enlacesMejoraContina = "https://nsgroupmx.sharepoint.com/sites/ProcesosyMejoraContinua"; // PEGA AQUÍ TU ENLACE DE SHAREPOINT
    var enlacesCompras = "https://forms.office.com/r/K7u3UMVVKi"; // PEGA AQUÍ TU ENLACE DE SHAREPOINT
    var enlacesLogistica = "https://forms.office.com/r/77fwUyxuE0"; // PEGA AQUÍ TU ENLACE DE SHAREPOINT
    var enlacesEmbarques = "https://forms.office.com/r/MRjsPtpUrv"; // PEGA AQUÍ TU ENLACE DE SHAREPOINT
    var enlacesHelpDesk = "https://forms.office.com/r/nBWtdqGsUm"; // PEGA AQUÍ TU ENLACE DE SHAREPOINT
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/@cssFile" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', 'Segoe UI', sans-serif;
            background-color: #f8fafc;
            overflow-x: hidden;
        }

        /* Main Content sin sidebar */
        .main-wrapper {
            min-height: 100vh;
            width: 100%;
        }

        /* Top Navigation */
        .top-navbar {
            background: var(--color-primario);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding: 0;
            position: sticky;
            top: 0;
            z-index: 999;
            box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        }

        .navbar-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 2rem;
        }

        .navbar-left {
            display: flex;
            align-items: center;
            gap: 2rem;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: #fff;
            text-decoration: none;
            font-size: 1.25rem;
            font-weight: 600;
        }

        .navbar-logo {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            object-fit: contain;
            background: rgba(255, 255, 255, 0.1);
            padding: 4px;
        }

        .navbar-brand i {
            width: 40px;
            height: 40px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
        }

        .navbar-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #fff;
            margin: 0;
        }

        .navbar-links {
            display: flex;
            gap: 1.5rem;
        }

        .navbar-link {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            transition: all 0.2s ease;
        }

            .navbar-link:hover {
                color: #fff;
                background: rgba(255, 255, 255, 0.1);
            }

        .navbar-right {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .user-menu {
            position: relative;
        }

        .user-toggle {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.5rem 1rem;
            background: transparent;
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.2s ease;
        }

            .user-toggle:hover {
                background: rgba(255, 255, 255, 0.1);
                border-color: rgba(255, 255, 255, 0.3);
            }

        .user-avatar {
            width: 32px;
            height: 32px;
            background: #fff;
            color: var(--color-primario);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .user-info {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .user-name {
            font-weight: 500;
            color: #fff;
            font-size: 0.9rem;
            line-height: 1.2;
        }

        .user-role {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.75rem;
            line-height: 1.2;
        }

        .user-dropdown {
            position: absolute;
            top: 100%;
            right: 0;
            margin-top: 0.5rem;
            background: #fff;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
            min-width: 200px;
            display: none;
            z-index: 1000;
        }

            .user-dropdown.show {
                display: block;
            }

        .dropdown-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            color: #374151;
            text-decoration: none;
            transition: all 0.2s ease;
            border: none;
            background: none;
            width: 100%;
            text-align: left;
            font-size: 0.9rem;
        }

            .dropdown-item:hover {
                background: #f8fafc;
                color: var(--color-primario);
            }

            .dropdown-item:first-child {
                border-radius: 12px 12px 0 0;
            }

            .dropdown-item:last-child {
                border-radius: 0 0 12px 12px;
                border-top: 1px solid #e2e8f0;
                color: #dc2626;
            }

                .dropdown-item:last-child:hover {
                    background: #fef2f2;
                    color: #dc2626;
                }

        /* Main Content Area */
        .main-content {
            padding: 2rem;
            min-height: calc(100vh - 80px);
            max-width: 1400px;
            margin: 0 auto;
        }

        .welcome-section {
            background: linear-gradient(135deg, var(--color-primario) 0%, var(--color-primario) 100%);
            border-radius: 16px;
            padding: 2rem;
            color: #fff;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
        }

            .welcome-section::before {
                content: '';
                position: absolute;
                top: 0;
                right: 0;
                width: 200px;
                height: 200px;
                background: rgba(255, 255, 255, 0.1);
                border-radius: 50%;
                transform: translate(50px, -50px);
            }

        .welcome-content {
            position: relative;
            z-index: 1;
        }

        .welcome-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: #fff !important;
        }

        .welcome-subtitle {
            font-size: 1.1rem;
            opacity: 0.9;
            margin: 0;
            color: #fff !important;
        }

        /* Quick Actions - Mejorado para más tarjetas */
        .quick-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .action-card {
            background: #fff !important;
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px 0 rgb(0 0 0 / 0.06);
            border: 1px solid #e2e8f0;
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            color: inherit;
            display: block;
            position: relative;
            overflow: hidden;
            min-height: 200px;
        }

            .action-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 10px 25px -3px rgb(0 0 0 / 0.1), 0 4px 6px -2px rgb(0 0 0 / 0.05);
                border-color: var(--color-primario);
                text-decoration: none;
                color: inherit;
            }

            .action-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                transform: scaleX(0);
                transition: transform 0.3s ease;
            }

            .action-card:hover::before {
                transform: scaleX(1);
            }
            
            /* Colores específicos para cada módulo */
            
            .action-card.universidad::before {
                background: #3b82f6;
            }

            .action-card.universidad .action-icon {
                background: linear-gradient(135deg, #3b82f6, #1d4ed8);
            }

            .action-card.lider::before {
                background: #10b981;
            }

            .action-card.lider .action-icon {
                background: linear-gradient(135deg, #10b981, #059669);
            }

            .action-card.comunicados::before {
                background: #f59e0b;
            }

            .action-card.comunicados .action-icon {
                background: linear-gradient(135deg, #f59e0b, #d97706);
            }

            .action-card.mejora::before {
                background: #8b5cf6;
            }

            .action-card.mejora .action-icon {
                background: linear-gradient(135deg, #8b5cf6, #7c3aed);
            }

            .action-card.compras::before {
                background: #ef4444;
            }

            .action-card.compras .action-icon {
                background: linear-gradient(135deg, #ef4444, #dc2626);
            }

            .action-card.logistica::before {
                background: #06b6d4;
            }

            .action-card.logistica .action-icon {
                background: linear-gradient(135deg, #06b6d4, #0891b2);
            }

            .action-card.embarques::before {
                background: #84cc16;
            }

            .action-card.embarques .action-icon {
                background: linear-gradient(135deg, #84cc16, #65a30d);
            }

            .action-card.helpdesk::before {
                background: #ec4899;
            }

            .action-card.helpdesk .action-icon {
                background: linear-gradient(135deg, #ec4899, #db2777);
            }

            /* ===== CÓDIGO NUEVO PARA EL LOGO DE UNIVERSIDAD ===== */

            /* Estilo específico para la tarjeta de Universidad NS Group con logo de fondo */
            /* Versión usando wwwroot (para ASP.NET Core): */
            /* ===== CÓDIGO NUEVO CORREGIDO PARA EL LOGO DE UNIVERSIDAD ===== */

            .action-card.universidad {
                background-color: #fff !important;
                background-image: linear-gradient(135deg, rgba(255, 255, 255, 0.85) 0%, rgba(255, 255, 255, 0.80) 100%), url('/Imagenes/logo-universidad-ns.png') !important;
                background-size: 140px 140px, 140px 140px;
                background-repeat: no-repeat, no-repeat;
                background-position: center center, center center;
                border-radius: 16px;
                padding: 2rem;
                box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px 0 rgb(0 0 0 / 0.06);
                border: 1px solid #e2e8f0;
                transition: all 0.3s ease;
                cursor: pointer;
                text-decoration: none;
                color: inherit;
                display: block;
                position: relative;
                overflow: hidden;
                min-height: 200px;
            }

                /* Asegurar que el contenido esté por encima */
                .action-card.universidad .action-icon,
                .action-card.universidad .action-title,
                .action-card.universidad .action-description {
                    position: relative;
                    z-index: 10;
                }

                /* Estilo especial para el ícono de universidad - SIN SOBRESCRIBIR BACKGROUND */
                .action-card.universidad .action-icon {
                    /* NO DEFINIR BACKGROUND AQUÍ */
                    width: 70px !important;
                    height: 70px !important;
                    border-radius: 16px !important;
                    display: flex !important;
                    align-items: center !important;
                    justify-content: center !important;
                    margin-bottom: 1.5rem !important;
                    box-shadow: 0 4px 14px 0 rgba(59, 130, 246, 0.3) !important;
                    z-index: 10 !important;
                    position: relative !important;
                    background: linear-gradient(135deg, #3b82f6, #1d4ed8) !important;
                }
                    .action-card.universidad .action-icon i {
                        font-size: 1.75rem;
                        color: #fff;
                    }

                /* Mejorar legibilidad con fondos semi-transparentes */
                .action-card.universidad .action-title {
                    font-size: 1.25rem;
                    font-weight: 700;
                    color: #1e293b;
                    margin-bottom: 0.75rem;
                    line-height: 1.3;
                    text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.8); /* Sombra para legibilidad */
                }

                .action-card.universidad .action-description {
                    color: #374151;
                    font-size: 0.95rem;
                    line-height: 1.6;
                    margin: 0;
                    font-weight: 500;
                    text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.8); /* Sombra para legibilidad */
                }


        .action-icon {
            width: 70px;
            height: 70px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 14px 0 rgba(0, 0, 0, 0.1);
        }

            .action-icon i {
                font-size: 1.75rem;
                color: #fff;
            }

        .action-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 0.75rem;
            line-height: 1.3;
        }

        .action-description {
            color: #64748b;
            font-size: 0.95rem;
            line-height: 1.6;
            margin: 0;
        }

        /* Badge para enlaces externos */
        .external-link-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: rgba(59, 130, 246, 0.1);
            color: #3b82f6;
            padding: 0.25rem 0.5rem;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        /* Responsive Design */
        @@media (max-width: 1200px) {
            .quick-actions

        {
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        }

        }

        @@media (max-width: 768px) {
            .navbar-content

        {
            padding: 1rem;
        }

        .navbar-links {
            display: none;
        }

        .main-content {
            padding: 1rem;
        }

        .welcome-section {
            padding: 1.5rem;
        }

        .welcome-title {
            font-size: 1.5rem;
        }

        .welcome-subtitle {
            font-size: 1rem;
        }

        .quick-actions {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .action-card {
            padding: 1.5rem;
            min-height: 180px;
        }

        .action-icon {
            width: 60px;
            height: 60px;
        }

            .action-icon i {
                font-size: 1.5rem;
            }

        }

        @@media (max-width: 480px) {
            .navbar-content

        {
            padding: 0.75rem;
        }

        .navbar-brand {
            font-size: 1.1rem;
        }

        .user-info {
            display: none;
        }

        .main-content {
            padding: 0.75rem;
        }

        }

        /* FORZAR el background de universidad con máxima especificidad */
        .quick-actions .action-card.universidad {
            background: #ffffff url('/Imagenes/logo-universidad-ns.png') no-repeat center center !important;
            background-size: 300px 300px !important;
        }

            /* Overlay transparente */
            .quick-actions .action-card.universidad::after {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(135deg, rgba(255, 255, 255, 0.75) 0%, rgba(255, 255, 255, 0.70) 100%);
                z-index: 1;
                pointer-events: none;
            }

            /* Forzar que el contenido esté encima */
            .quick-actions .action-card.universidad > * {
                position: relative !important;
                z-index: 10 !important;
            }
    </style>
</head>

<body>
    <!-- Main Content Wrapper (sin sidebar) -->
    <div class="main-wrapper">
        <!-- Top Navigation -->
        <nav class="top-navbar">
            <div class="navbar-content">
                <div class="navbar-left">
                    <a href="#" class="navbar-brand">
                        @if (!string.IsNullOrEmpty(logoEmpresa) && logoEmpresa != "default-logo.png")
                        {
                            <img src="~/imagenes/@logoEmpresa" alt="@nombreEmpresa" class="navbar-logo" />
                        }
                        else
                        {
                            <i class="fas fa-building"></i>
                        }
                        @nombreEmpresa
                    </a>
                    <div class="navbar-links">
                        <a href="#" class="navbar-link">Página NS Group</a>
                        <a href="#" class="navbar-link">Recursos Humanos</a>
                        <a href="#" class="navbar-link">Directorio</a>
                    </div>
                </div>
                <div class="navbar-right">
                    <div class="user-menu">
                        <button class="user-toggle" id="userToggle">
                            <div class="user-avatar">
                                @(nombreUsuario.Substring(0, 1).ToUpper())
                            </div>
                            <div class="user-info">
                                <div class="user-name">@nombreUsuario</div>
                                <div class="user-role">Colaborador</div>
                            </div>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="user-dropdown" id="userDropdown">
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-user"></i>
                                Mi Perfil
                            </a>
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-cog"></i>
                                Configuración
                            </a>
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-bell"></i>
                                Notificaciones
                            </a>
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-question-circle"></i>
                                Ayuda
                            </a>
                            <a href="/Menu/Logout" class="dropdown-item">
                                <i class="fas fa-sign-out-alt"></i>
                                Cerrar Sesión
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Welcome Section -->
            <div class="welcome-section">
                <div class="welcome-content">
                    <h2 class="welcome-title">¡Hola, @nombreUsuario!</h2>
                    <p class="welcome-subtitle">Bienvenido al portal interno de @nombreEmpresa. Accede a recursos, capacitaciones y herramientas internas.</p>
                </div>
            </div>
            <div class="quick-actions">
                @if (Model != null)
                {
                    foreach (var menu in Model)
                    {
                        <div class="action-card" data-href="@menu.Url">
                            <div class="action-icon">
                                <i class="fas @menu.Icono"></i>
                            </div>
                            <h3 class="action-title">@menu.Nombre</h3>
                        </div>
                    }
                }
            </div>

        </main>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // User dropdown toggle
        document.getElementById('userToggle').addEventListener('click', function(e) {
            e.stopPropagation();
            document.getElementById('userDropdown').classList.toggle('show');
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', function() {
            document.getElementById('userDropdown').classList.remove('show');
        });

        // Hacer clickeable las tarjetas con data-href (enlaces internos)
        document.querySelectorAll('.action-card[data-href]').forEach(function(card) {
            card.addEventListener('click', function() {
                window.location.href = this.getAttribute('data-href');
            });
        });

        // Hacer clickeable las tarjetas con data-href-external (enlaces SharePoint)
        document.querySelectorAll('.action-card[data-href-external]').forEach(function(card) {
            card.addEventListener('click', function() {
                window.open(this.getAttribute('data-href-external'), '_blank');
            });
        });

        // Agregar efecto de carga suave
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.action-card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 150);
            });
        });
    </script>
</body>
</html>
