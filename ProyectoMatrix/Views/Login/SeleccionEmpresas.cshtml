@model ProyectoMatrix.Models.UsuarioModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Selecciona la Empresa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h3>Selecciona la empresa con la que deseas entrar</h3>
        <div class="row mt-4">
            @foreach (var empresa in Model.Empresas)
            {
                <div class="col-6 col-md-3 mb-3">
                    <form asp-action="SeleccionarEmpresa" method="post">
                        <input type="hidden" name="usuarioId" value="@Model.UsuarioID" />
                        <input type="hidden" name="empresaId" value="@empresa.EmpresaID" />
                        <button type="submit" class="btn btn-primary w-100">
                            @if (!string.IsNullOrEmpty(empresa.Logo))
                            {
                                <img src="~/Imagenes/@empresa.Logo" alt="@empresa.Nombre" class="img-fluid mb-2" style="max-height: 80px;" />
                            }
                            <br />
                            @empresa.Nombre
                        </button>
                    </form>
                </div>
            }
        </div>
    </div>
</body>
</html>
