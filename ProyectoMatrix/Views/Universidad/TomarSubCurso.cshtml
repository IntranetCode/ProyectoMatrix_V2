        (function () {
          const v = document.getElementById('videoPlayer');
          if (!v) return;

          // Opcional pero recomendado para evitar PiP y cambio de velocidad
          v.setAttribute('controlsList', 'nodownload noplaybackrate noremoteplayback');
          v.disablePictureInPicture = true;

          // Carga el último punto permitido desde el servidor (segundos ya vistos)
          let lastAllowed = Number(@Model.TiempoTotalVisto) || 0;  // ✅ ajusta si tu propiedad se llama diferente
          if (lastAllowed < 0) lastAllowed = 0;

          // Pequeño margen para falsos positivos de seeking
          const EPS = 0.35;

          // Reanudar donde se quedó
          v.addEventListener('loadedmetadata', () => {
            if (lastAllowed > 0 && lastAllowed < (v.duration || Infinity)) {
              v.currentTime = lastAllowed;
            }
            // Cualquier rate raro se fuerza a 1x
            if (v.playbackRate !== 1) v.playbackRate = 1;
          });

          // Mientras ve el video, avanza el límite permitido
          v.addEventListener('timeupdate', () => {
            if (v.currentTime > lastAllowed) lastAllowed = v.currentTime;
          });

          // Evita acelerar la reproducción
          v.addEventListener('ratechange', () => {
            if (v.playbackRate !== 1) v.playbackRate = 1;
          });

          // ——— Núcleo anti-adelanto ———
          let clampGuardUntil = 0; // tiempo (ms) hasta cuando reforzar el clamp tras un seek
          function clampIfForward() {
            if (v.currentTime > lastAllowed + EPS) {
              // Si intenta ir más allá, lo regresamos al último punto visto
              v.currentTime = lastAllowed;
            }
          }

          // Cuando el usuario busca con la barra o atajos, se dispara seeking/seeked
          v.addEventListener('seeking', () => {
            // Permitir ir hacia atrás libremente; solo bloquea si es hacia adelante
            clampIfForward();
            // Durante ~700ms después del seek, reforzamos el clamp cada frame
            clampGuardUntil = performance.now() + 700;
            requestAnimationFrame(function guard() {
              clampIfForward();
              if (performance.now() < clampGuardUntil) requestAnimationFrame(guard);
            });
          });

          v.addEventListener('seeked', clampIfForward);

          // Bloquea teclas que adelantan; deja retroceso
          v.addEventListener('keydown', (e) => {
            // ArrowRight / End / PageUp suelen adelantar
            if (['ArrowRight', 'End', 'PageUp'].includes(e.key)) {
              e.preventDefault();
              // Si quisieras, podrías permitir salto atrás con ArrowLeft sin tocar nada
            }
          });

          // (Opcional) Evita menú contextual (por si alguien intenta hacks)
          v.addEventListener('contextmenu', e => e.preventDefault());
        })();
    </script>

    <script>
        (function () {
          const v = document.getElementById('videoPlayer');
          if (!v) return;

          // ——— elementos UI
          const btnPlay = document.getElementById('btnPlay');
          const iconPlay = document.getElementById('iconPlay');
          const btnBack = document.getElementById('btnBack');
          const btnFwd  = document.getElementById('btnFwd');
          const fill    = document.getElementById('progressFill');
          const tCur    = document.getElementById('timeCurrent');
          const tDur    = document.getElementById('timeDuration');

          // ——— estado
          const EPS = 0.35;
          let lastAllowed = Number(@Model.TiempoTotalVisto) || 0; // reanudar
          let seekingNow = false;

          // util
          const fmt = s => {
            s = Math.max(0, Math.floor(s));
            const h = Math.floor(s/3600), m = Math.floor((s%3600)/60), sec = s%60;
            return h>0 ? `${h}:${String(m).padStart(2,'0')}:${String(sec).padStart(2,'0')}`
                       : `${m}:${String(sec).padStart(2,'0')}`;
          };

          // init
          v.addEventListener('loadedmetadata', () => {
            if (v.duration && lastAllowed >= v.duration) lastAllowed = Math.max(0, v.duration - 1);
            if (lastAllowed > 0) v.currentTime = lastAllowed;
            tDur.textContent = fmt(v.duration || 0);
            updateUI();
          });

          // botones
          btnPlay.addEventListener('click', async () => {
            if (v.paused) { try { await v.play(); } catch {} } else { v.pause(); }
          });
          v.addEventListener('play',  () => swapIcon('pause'));
          v.addEventListener('pause', () => swapIcon('play'));

          function swapIcon(state){
            if (state === 'pause') {
              iconPlay.classList.remove('ns-icon-play');
              iconPlay.classList.add('ns-icon-pause');
            } else {
              iconPlay.classList.remove('ns-icon-pause');
              iconPlay.classList.add('ns-icon-play');
            }
          }

          btnBack.addEventListener('click', () => {
            v.currentTime = Math.max(0, v.currentTime - 10);
          });

          // Adelantar deshabilitado (mostrado solo visual)
          btnFwd.addEventListener('click', (e) => { e.preventDefault(); });

          // bloquear rate
          v.addEventListener('ratechange', () => { if (v.playbackRate !== 1) v.playbackRate = 1; });

          // bloquear advance
          v.addEventListener('seeking', () => {
            seekingNow = true;
            if (v.currentTime > lastAllowed + EPS) v.currentTime = lastAllowed;
          });
          v.addEventListener('seeked', () => {
            if (v.currentTime > lastAllowed + EPS) v.currentTime = lastAllowed;
            seekingNow = false;
          });

          v.addEventListener('timeupdate', () => {
            if (!v.paused && !seekingNow && v.currentTime > lastAllowed) lastAllowed = v.currentTime;
            updateUI();
          });

          // guardia también en pausa (por click en la barra nativa si apareciera)
          const guard = setInterval(() => {
            if (v.currentTime > lastAllowed + EPS) v.currentTime = lastAllowed;
          }, 120);

          window.addEventListener('beforeunload', () => clearInterval(guard));

          // UI
          function updateUI(){
            const dur = v.duration || 0;
            const cur = v.currentTime || 0;
            const pct = dur ? (cur / dur) * 100 : 0;
            fill.style.width = `${pct}%`;
            tCur.textContent = fmt(cur);
            if (dur) tDur.textContent = fmt(dur);
          }

          // evitar menú/contexto sobre video
          v.addEventListener('contextmenu', e => e.preventDefault());
        })();
    </script>


