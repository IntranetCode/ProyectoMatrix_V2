<!-- JavaScript para el Filtrado -->
<script>
    // Se ejecuta una vez que el DOM (Document Object Model) esté completamente cargado.
    document.addEventListener('DOMContentLoaded', function () {
        const filterGroup = document.getElementById('filterButtonGroup');
        const cursoCards = document.querySelectorAll('.curso-card-container');
        const noResultsMessage = document.getElementById('noResultsMessage');

        /**
         * Función principal para aplicar el filtro de cursos.
         * @@param {string} filterValue - El valor del filtro a aplicar ('todos', 'completado', etc.)
         */
        function applyFilter(filterValue) {
            let visibleCount = 0;
            const isTodos = filterValue === 'todos';

            cursoCards.forEach(card => {
                const cardState = card.getAttribute('data-estado');

                // Muestra la tarjeta si el filtro es 'todos' o si el estado coincide
                if (isTodos || cardState === filterValue) {
                    card.style.display = 'block';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });

            // Muestra u oculta el mensaje de "No hay resultados"
            if (visibleCount === 0) {
                noResultsMessage.style.display = 'block';
            } else {
                noResultsMessage.style.display = 'none';
            }
        }

        // Agrega el listener de eventos al grupo de botones para delegar el click
        if (filterGroup) {
            filterGroup.addEventListener('click', function (event) {
                const clickedButton = event.target.closest('button');

                if (clickedButton && clickedButton.hasAttribute('data-filter')) {
                    // 1. Obtener el valor del filtro
                    const filterValue = clickedButton.getAttribute('data-filter');

                    // 2. Remover la clase 'active' de todos los botones
                    filterGroup.querySelectorAll('button').forEach(btn => {
                        btn.classList.remove('active');
                    });

                    // 3. Añadir la clase 'active' al botón clickeado
                    clickedButton.classList.add('active');

                    // 4. Aplicar el filtro a las tarjetas
                    applyFilter(filterValue);
                }
            });
        }

        // Ejecutar el filtro inicial al cargar la página (para mostrar el estado 'todos')
        applyFilter('todos');
    });

    // Función placeholder para el certificado (manteniendo la funcionalidad existente)
    function verCertificado(cursoId) {
        // En un escenario real, aquí harías una llamada AJAX para cargar el certificado
        const modal = new bootstrap.Modal(document.getElementById('certificadoModal'));
        document.getElementById('certificadoContent').innerHTML = `
            <div class="text-center certificado-preview">
                <h5>Cargando Certificado...</h5>
                <p>Solicitando el certificado digital para el Curso ID: ${cursoId}.</p>
            </div>
        `;
        modal.show();
    }
</script>
