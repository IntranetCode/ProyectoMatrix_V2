@model List<ProyectoMatrix.Models.CursoAsignadoViewModel>

@{
    ViewData["Title"] = "Mis Cursos - Universidad NS";
    Layout = "_LayoutUniversidad";

    // Totales (unificamos "Asignado" como "Pendiente" para contadores)
    var total = Model.Count;
    var completados = Model.Count(x => x.Estado == "Completado");
    var enProgreso = Model.Count(x => x.Estado == "En Progreso" || x.Estado == "EnProgreso");
    var pendientes = Model.Count(x => x.Estado == "Pendiente" || x.Estado == "Asignado");
}

<div class="mis-cursos-container">
    <!-- Header -->
    <div class="page-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="header-content">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/Universidad">Universidad NS</a>
                                </li>
                                <li class="breadcrumb-item active">Mis Cursos</li>
                            </ol>
                        </nav>
                        <h1 class="page-title">
                            <i class="fas fa-graduation-cap me-3"></i>Mis Capacitaciones
                        </h1>
                        <p class="page-subtitle">
                            Accede a tus cursos asignados y continúa tu desarrollo profesional
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <!-- Se añade un ID al div contenedor del grupo de botones para fácil acceso desde JS -->
    <div class="container-fluid mt-4">
        <div class="filters-section">
            <div class="row align-items-center">
                <div class="col-md-6 offset-md-6">
                    <!-- Alineado a la derecha -->
                    <div class="filter-buttons text-end">
                        <div class="btn-group" role="group" id="filterButtonGroup">
                            <button class="btn btn-outline-primary active" data-filter="todos">
                                Todos (@total)
                            </button>
                            <button class="btn btn-outline-success" data-filter="completado">
                                Completados (@completados)
                            </button>
                            <button class="btn btn-outline-warning" data-filter="en-progreso">
                                En Progreso (@enProgreso)
                            </button>
                            <button class="btn btn-outline-secondary" data-filter="pendiente">
                                Pendientes (@pendientes)
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de Cursos -->
    <div class="container-fluid mt-4">
        @if (Model.Any())
        {
            <div class="cursos-grid" id="cursosGrid">
                @foreach (var curso in Model)
                {
                    // Normalización de estado para filtro y visualización
                    var estadoTexto = (curso.Estado ?? string.Empty).Trim();
                    var isAsignado = string.Equals(estadoTexto, "Asignado", StringComparison.OrdinalIgnoreCase);

                    // "Asignado" cuenta como "pendiente" para el filtro
                    var estadoFiltro = isAsignado
                    ? "pendiente"
                    : estadoTexto.ToLower().Replace(" ", "-"); // "completado" | "en-progreso" | "pendiente"

                    // Texto que se muestra en el chip/etiqueta
                    var estadoVisual = isAsignado ? "Pendiente" : estadoTexto;

                    <!-- Cada tarjeta debe tener el atributo data-estado correcto para ser filtrada -->
                    <div class="curso-card-container"
                         data-estado="@estadoFiltro"
                         data-nombre="@((curso.NombreCurso ?? string.Empty).ToLowerInvariant())">

                        <div class="curso-card @(curso.ProximoVencimiento ? "border-warning" : "")">
                            <!-- Card Header -->
                            <div class="curso-card-header">
                                <div class="curso-header-left">
                                    <div class="curso-nivel" style="background-color: @curso.ColorNivel">
                                        @curso.NombreNivel
                                    </div>
                                    @if (curso.EsObligatorio)
                                    {
                                        <span class="badge bg-danger ms-2">
                                            <i class="fas fa-exclamation-circle me-1"></i>Obligatorio
                                        </span>
                                    }
                                </div>
                                <div class="curso-header-right">
                                    <span class="@curso.EstadoClass">@estadoVisual</span>
                                    @if (curso.ProximoVencimiento)
                                    {
                                        <i class="fas fa-clock text-warning ms-2" title="Próximo a vencer"></i>
                                    }
                                </div>
                            </div>

                            <!-- Card Body -->
                            <div class="curso-card-body">
                                <div class="curso-image">
                                    @if (!string.IsNullOrEmpty(curso.ImagenCurso))
                                    {
                                        <img src="~/contenidos/@curso.ImagenCurso"
                                             alt="@curso.NombreCurso"
                                             class="curso-thumbnail"
                                             onerror="this.onerror=null; this.src='https://placehold.co/80x80/a0c4ff/ffffff?text=Curso'">
                                    }
                                    else
                                    {
                                        <div class="curso-placeholder">
                                            <i class="fas fa-book fa-2x"></i>
                                        </div>
                                    }
                                </div>

                                <div class="curso-content">
                                    <h5 class="curso-title">@curso.NombreCurso</h5>

                                    @if (!string.IsNullOrEmpty(curso.Descripcion))
                                    {
                                        <p class="curso-description">@curso.Descripcion</p>
                                    }

                                    <!-- Progreso del Curso -->
                                    <div class="curso-progress mb-3">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="progress-label">Progreso del curso</span>
                                            <span class="progress-percentage">@curso.PorcentajeProgreso.ToString("F0")%</span>
                                        </div>
                                        <div class="progress curso-progress-bar">
                                            <div class="progress-bar @(curso.Estado == "Completado" ? "bg-success" : "bg-primary")"
                                                 style="width: @curso.PorcentajeProgreso%"
                                                 role="progressbar"
                                                 aria-valuenow="@curso.PorcentajeProgreso"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100">
                                            </div>
                                        </div>
                                        <div class="progress-details mt-2">
                                            <small class="text-muted">
                                                <i class="fas fa-play-circle me-1"></i>
                                                @curso.SubCursosCompletados de @curso.TotalSubCursos módulos completados
                                            </small>
                                        </div>
                                    </div>

                                    <!-- Información Adicional -->
                                    <div class="curso-info">
                                        <div class="info-row">
                                            <div class="info-item">
                                                <i class="fas fa-calendar-plus text-muted me-1"></i>
                                                <small class="text-muted">
                                                    @{
                                                        var fa = curso.FechaAsignacion;
                                                    }
                                                                                            Asignado: @(
                                                                                            (fa is DateTime d && d.Year > 1900)
                                                                                            ? d.ToString("dd/MM/yyyy")
                                                                                            : "-"
                                                                                        )
                                        </small>
                                    </div>
                                    @if (curso.TieneFechaLimite)
                                            {
                                                <div class="info-item">
                                                    <i class="fas fa-calendar-times @(curso.ProximoVencimiento ? "text-warning" : "text-muted") me-1"></i>
                                                    <small class="@(curso.ProximoVencimiento ? "text-warning" : "text-muted")">
                                                        Límite: @curso.FechaLimiteTexto
                                                        @if (curso.ProximoVencimiento)
                                                        {
                                                            <span class="badge bg-warning ms-1">¡Pronto!</span>
                                                        }
                                                    </small>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Card Footer -->
                            <div class="curso-card-footer">
                                <div class="footer-actions">
                                    <a asp-controller="Universidad"
                                       asp-action="TomarCurso"
                                       asp-route-cursoId="@curso.CursoID"
                                       class="btn btn-universidad flex-grow-1">
                                        @if (curso.Estado == "Completado")
                                        {
                                            <i class="fas fa-eye me-2"></i>
                                            <text>Revisar Curso</text>
                                        }
                                        else if (curso.Estado == "En Progreso")
                                        {
                                            <i class="fas fa-play me-2"></i>
                                            <text>Continuar</text>
                                        }
                                        else
                                        {
                                            <i class="fas fa-play-circle me-2"></i>
                                            <text>Comenzar</text>
                                        }
                                    </a>

                                    @if (curso.Estado == "Completado")
                                    {
                                        <button class="btn btn-outline-success ms-2"
                                                onclick="verCertificado(@curso.CursoID)"
                                                title="Ver certificado">
                                            <i class="fas fa-certificate"></i>
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Mensaje de no resultados (oculto por defecto) -->
            <div id="noResultsMessage" class="empty-state" style="display: none;">
                <div class="text-center py-5">
                    <div class="empty-icon mb-4">
                        <i class="fas fa-box-open fa-4x text-muted"></i>
                    </div>
                    <h4 class="text-muted mb-3">No hay cursos en el filtro seleccionado.</h4>
                    <p class="text-muted mb-4">
                        Intenta seleccionar el filtro "Todos" para ver todos tus cursos asignados.
                    </p>
                </div>
            </div>
        }
        else
        {
            <!-- Estado Vacío Inicial -->
            <div class="empty-state">
                <div class="text-center py-5">
                    <div class="empty-icon mb-4">
                        <i class="fas fa-graduation-cap fa-4x text-muted"></i>
                    </div>
                    <h4 class="text-muted mb-3">No tienes cursos asignados</h4>
                    <p class="text-muted mb-4">
                        Los cursos que te sean asignados aparecerán aquí.<br />
                        Contacta a tu administrador para más información.
                    </p>
                    <a href="/Universidad" class="btn btn-universidad">
                        <i class="fas fa-arrow-left me-2"></i>Volver al Dashboard
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Modal para Certificado (Mantenido para funcionalidad) -->
    <div class="modal fade" id="certificadoModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-certificate text-warning me-2"></i>Certificado de Finalización
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="certificadoContent">
                    <!-- Contenido se carga dinámicamente -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-success" id="descargarCertificado">
                        <i class="fas fa-download me-2"></i>Descargar PDF
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


