@model ProyectoMatrix.Models.CrearCursoRequest
@{
    ViewData["Title"] = "Crear Nuevo Curso";
    Layout = "~/Views/Universidad/_LayoutUniversidad.cshtml";
}

<div class="container-fluid p-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-plus-circle me-2"></i>
                        Crear Nuevo Curso
                    </h2>
                    <p class="text-muted mb-0">Crea un nuevo curso para la plataforma Universidad NS</p>
                </div>
                <div>
                    <a href="/Universidad/GestionCursos" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>
                        Volver a Gestión
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Form -->
    <div class="row">
        <div class="col-xl-8 col-lg-10 mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-book text-primary me-2"></i>
                        Información del Curso
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CrearCurso" method="post" enctype="multipart/form-data" id="crearCursoForm">
                        <!-- Nivel Educativo -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="NivelID" class="form-label fw-semibold">
                                    <i class="fas fa-layer-group text-primary me-1"></i>
                                    Nivel Educativo *
                                </label>
                                <select asp-for="NivelID" class="form-select" required>
                                    <option value="">Seleccionar nivel...</option>
                                    @if (ViewBag.Niveles != null)
                                    {
                                        @foreach (var nivel in (List<ProyectoMatrix.Models.NivelEducativoViewModel>)ViewBag.Niveles)
                                        {
                                            <option value="@nivel.NivelID">@nivel.NombreNivel</option>
                                        }
                                    }
                                    else
                                    {
                                        <option value="1">Básico</option>
                                        <option value="2">Intermedio</option>
                                        <option value="3">Avanzado</option>
                                    }
                                </select>
                                <span asp-validation-for="NivelID" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Duracion" class="form-label fw-semibold">
                                    <i class="fas fa-clock text-primary me-1"></i>
                                    Duración (minutos)
                                </label>
                                <input asp-for="Duracion" type="number" class="form-control" min="1" max="1440" placeholder="Ej: 60">
                                <span asp-validation-for="Duracion" class="text-danger small"></span>
                                <div class="form-text">Duración estimada total del curso</div>
                            </div>
                        </div>

                        <!-- Nombre del Curso -->
                        <div class="mb-4">
                            <label asp-for="NombreCurso" class="form-label fw-semibold">
                                <i class="fas fa-heading text-primary me-1"></i>
                                Nombre del Curso *
                            </label>
                            <input asp-for="NombreCurso" type="text" class="form-control" required maxlength="200" 
                                   placeholder="Ej: Introducción a la Seguridad Industrial">
                            <span asp-validation-for="NombreCurso" class="text-danger small"></span>
                            <div class="form-text">Nombre descriptivo del curso (máximo 200 caracteres)</div>
                        </div>

                        <!-- Descripción -->
                        <div class="mb-4">
                            <label asp-for="Descripcion" class="form-label fw-semibold">
                                <i class="fas fa-align-left text-primary me-1"></i>
                                Descripción del Curso
                            </label>
                            <textarea asp-for="Descripcion" class="form-control" rows="4" maxlength="1000"
                                      placeholder="Describe los objetivos, contenido y beneficios del curso..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            <div class="form-text">Descripción detallada del curso (máximo 1000 caracteres)</div>
                        </div>

                        <!-- Imagen del Curso -->
                        <div class="mb-4">
                            <label for="imagenCurso" class="form-label fw-semibold">
                                <i class="fas fa-image text-primary me-1"></i>
                                Imagen del Curso (Opcional)
                            </label>
                            <input type="file" class="form-control" id="imagenCurso" name="imagenCurso" 
                                   accept="image/*" onchange="previewImage(this)">
                            <div class="form-text">Formatos permitidos: JPG, PNG, GIF (máximo 2MB)</div>
                            
                            <!-- Preview de la imagen -->
                            <div id="imagePreview" class="mt-3" style="display: none;">
                                <div class="card" style="max-width: 300px;">
                                    <img id="previewImg" src="" class="card-img-top" style="height: 200px; object-fit: cover;">
                                    <div class="card-body p-2">
                                        <small class="text-muted">Vista previa</small>
                                        <button type="button" class="btn btn-sm btn-outline-danger ms-2" onclick="removeImage()">
                                            <i class="fas fa-times"></i> Quitar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Opciones del Curso -->
                        <div class="card bg-light border-0 mb-4">
                            <div class="card-body">
                                <h6 class="card-title text-primary mb-3">
                                    <i class="fas fa-cogs me-2"></i>
                                    Configuración del Curso
                                </h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="esObligatorio" checked>
                                            <label class="form-check-label fw-semibold" for="esObligatorio">
                                                Curso Obligatorio
                                            </label>
                                            <div class="form-text">Los usuarios deben completar este curso</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="requiereEvaluacion" checked>
                                            <label class="form-check-label fw-semibold" for="requiereEvaluacion">
                                                Requiere Evaluación
                                            </label>
                                            <div class="form-text">Incluir evaluaciones en los módulos</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <div class="form-text">
                                <i class="fas fa-info-circle text-info me-1"></i>
                                Los campos marcados con * son obligatorios
                            </div>
                            <div class="btn-group">
                                <a href="/Universidad/GestionCursos" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-2"></i>
                                    Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary" id="btnCrearCurso">
                                    <i class="fas fa-save me-2"></i>
                                    Crear Curso
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Curso Preview Card (Solo visual) -->
    <div class="col-xl-4 col-lg-12 mt-4 mt-xl-0">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h6 class="card-title mb-0">
                    <i class="fas fa-eye me-2"></i>
                    Vista Previa del Curso
                </h6>
            </div>
            <div class="card-body">
                <div id="cursoPreview">
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-book fa-3x mb-3 opacity-50"></i>
                        <p>Completa el formulario para ver la vista previa</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        // Preview de imagen
        function previewImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('previewImg').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                    updateCursoPreview();
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        function removeImage() {
            document.getElementById('imagenCurso').value = '';
            document.getElementById('imagePreview').style.display = 'none';
            updateCursoPreview();
        }

        // Vista previa del curso
        function updateCursoPreview() {
            const nombreCurso = document.getElementById('NombreCurso').value;
            const descripcion = document.getElementById('Descripcion').value;
            const nivel = document.getElementById('NivelID').selectedOptions[0]?.text;
            const duracion = document.getElementById('Duracion').value;
            const imagen = document.getElementById('previewImg').src;

            if (!nombreCurso) {
                document.getElementById('cursoPreview').innerHTML = `
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-book fa-3x mb-3 opacity-50"></i>
                        <p>Completa el formulario para ver la vista previa</p>
                    </div>
                `;
                return;
            }

            document.getElementById('cursoPreview').innerHTML = `
                <div class="curso-preview-card">
                    ${imagen && imagen !== window.location.href ? 
                        `<img src="${imagen}" class="card-img-top" style="height: 150px; object-fit: cover;">` : 
                        `<div class="bg-primary text-white d-flex align-items-center justify-content-center" style="height: 150px;">
                            <i class="fas fa-book fa-3x"></i>
                        </div>`
                    }
                    <div class="p-3">
                        <h6 class="fw-bold text-primary mb-2">${nombreCurso}</h6>
                        ${descripcion ? `<p class="text-muted small mb-2">${descripcion.substring(0, 100)}${descripcion.length > 100 ? '...' : ''}</p>` : ''}
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-secondary">${nivel || 'Sin nivel'}</span>
                            ${duracion ? `<small class="text-muted"><i class="fas fa-clock me-1"></i>${duracion} min</small>` : ''}
                        </div>
                    </div>
                </div>
            `;
        }

        // Event listeners para vista previa
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('NombreCurso').addEventListener('input', updateCursoPreview);
            document.getElementById('Descripcion').addEventListener('input', updateCursoPreview);
            document.getElementById('NivelID').addEventListener('change', updateCursoPreview);
            document.getElementById('Duracion').addEventListener('input', updateCursoPreview);

            // Form submission
            document.getElementById('crearCursoForm').addEventListener('submit', function(e) {
                const btn = document.getElementById('btnCrearCurso');
                btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Creando...';
                btn.disabled = true;
            });
        });
    </script>

    <style>
        .curso-preview-card {
            border: 1px solid #e9ecef;
            border-radius: 8px;
            overflow: hidden;
            background: white;
        }

        .form-label {
            margin-bottom: 0.5rem;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.25);
        }

        .btn-primary {
            background-color: #3b82f6;
            border-color: #3b82f6;
        }

        .btn-primary:hover {
            background-color: #2563eb;
            border-color: #2563eb;
        }

        .text-primary {
            color: #3b82f6 !important;
        }

        .bg-primary {
            background-color: #3b82f6 !important;
        }
    </style>
}