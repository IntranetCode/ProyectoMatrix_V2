@model ProyectoMatrix.Models.Curso
@{
    ViewBag.Title = "Comenzar Curso";
    Layout = "~/Views/Shared/_Colaborador.cshtml";
}

<style>
    .curso-container {
        padding: 40px 20px;
        background: #102542; @*linear-gradient(135deg, #102542;
        , #102542;*@
        );
        color: white;
        min-height: calc(100vh - 60px);
    }

    .curso-card {
        background: white;
        color: #333;
        border-radius: 15px;
        padding: 30px;
        max-width: 800px;
        margin: auto;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        animation: fadeIn 0.6s ease-in-out;
    }

    .curso-titulo {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 15px;
        color: #4e54c8;
    }

    .curso-descripcion {
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    .curso-detalle {
        font-size: 0.95rem;
        color: #666;
        margin-bottom: 15px;
    }

    .progreso-curso {
        margin-bottom: 25px;
    }

    .btn-accion {
        font-size: 1.1rem;
        padding: 12px 25px;
        border-radius: 50px;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="curso-container">
    <div class="curso-card">
        <h2 class="curso-titulo">
            <i class="fas fa-book mr-2"></i>@Model.NombreCurso
        </h2>

        <p class="curso-descripcion">@Model.Descripcion</p>

        <p class="curso-detalle"><strong>Categoría:</strong> @Model.Categoria</p>
        <p class="curso-detalle"><strong>Estado:</strong> @(Model.Progreso.HasValue && Model.Progreso.Value >= 100 ? "Completado" : Model.Progreso > 0 ? "En progreso" : "Pendiente")</p>

        @if (Model.Progreso.HasValue)
        {
            <div class="progreso-curso">
                <label class="font-weight-bold">Progreso:</label>
                <div class="progress">
                    <div class="progress-bar @(Model.Progreso.Value >= 100 ? "bg-success" : Model.Progreso.Value >= 50 ? "bg-warning" : "bg-info")"
                         role="progressbar"
                         style="width: @Model.Progreso.Value%"
                         aria-valuenow="@Model.Progreso.Value"
                         aria-valuemin="0"
                         aria-valuemax="100">
                        @Model.Progreso.Value%
                    </div>
                </div>
            </div>
        }

        <div class="text-center mt-4">
            @if (Model.Progreso.HasValue && Model.Progreso.Value >= 100)
            {
                <button class="btn btn-success btn-accion" disabled>
                    <i class="fas fa-check-circle mr-2"></i>Curso Completado
                </button>
            }
            else if (Model.Progreso.HasValue && Model.Progreso.Value > 0)
            {
                <a href="@Url.Action("VerContenido", "Universidad", new { id = Model.CursoID })" class="btn btn-warning btn-accion">
                    <i class="fas fa-play-circle mr-2"></i> Continuar Curso
                </a>
            }
            else
            {
                <a href="@Url.Action("VerContenido", "Universidad", new { id = Model.CursoID })" class="btn btn-primary btn-accion">
                    <i class="fas fa-play mr-2"></i> Comenzar Curso
                </a>
            }
        </div>
    </div>
</div>
