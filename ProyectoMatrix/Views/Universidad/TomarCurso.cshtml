    }

    .subcursos-header {
        padding: 2rem;
        border-bottom: 1px solid var(--gray-200);
        background: var(--gray-50);
    }

        .subcursos-header h4 {
            color: var(--gray-800);
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

    .subcursos-list {
        padding: 0;
    }

    .subcurso-item {
        border-bottom: 1px solid var(--gray-100);
        transition: all 0.3s ease;
    }

        .subcurso-item:last-child {
            border-bottom: none;
        }

        .subcurso-item:hover:not(.locked) {
            background: var(--gray-50);
        }

        .subcurso-item.locked {
            opacity: 0.6;
            background: var(--gray-50);
        }

        .subcurso-item.completed {
            background: linear-gradient(90deg, rgba(16, 185, 129, 0.1) 0%, transparent 100%);
            border-left: 4px solid var(--color-success);
        }

        .subcurso-item.in-progress {
            background: linear-gradient(90deg, rgba(59, 130, 246, 0.1) 0%, transparent 100%);
            border-left: 4px solid var(--universidad-primary);
        }

    .subcurso-card {
        display: flex;
        align-items: flex-start;
        padding: 1.5rem;
        gap: 1rem;
    }

    .subcurso-number {
        flex-shrink: 0;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--gray-200);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        color: var(--gray-600);
    }

    .subcurso-item.completed .subcurso-number {
        background: var(--color-success);
        color: white;
    }

    .subcurso-item.in-progress .subcurso-number {
        background: var(--universidad-primary);
        color: white;
    }

    .subcurso-content {
        flex-grow: 1;
    }

    .subcurso-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 0.5rem;
    }

    .subcurso-title {
        color: var(--gray-800);
        font-weight: 600;
        font-size: 1.1rem;
        margin: 0;
