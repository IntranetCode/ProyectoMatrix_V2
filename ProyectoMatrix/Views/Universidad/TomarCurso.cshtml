        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .info-card-header {
        padding: 1rem 1.5rem;
        background: var(--gray-50);
        border-bottom: 1px solid var(--gray-200);
    }

        .info-card-header h6 {
            margin: 0;
            color: var(--gray-800);
            font-weight: 600;
        }

    .info-card-body {
        padding: 1.5rem;
    }

    .info-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--gray-100);
    }

        .info-item:last-child {
            border-bottom: none;
        }

    .info-label {
        color: var(--gray-600);
        font-size: 0.9rem;
    }

    .info-value {
        font-weight: 600;
        color: var(--gray-800);
    }

    .progress-detailed {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .progress-item-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .progress-item-title {
        font-size: 0.9rem;
        color: var(--gray-700);
        font-weight: 500;
    }

    .progress-item-percentage {
        font-size: 0.8rem;
        color: var(--gray-500);
        font-weight: 600;
    }

    .next-step {
        text-align: center;
    }

    .next-step-title {
        color: var(--gray-800);
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .next-step-description {
        font-size: 0.9rem;
        line-height: 1.4;
    }

    .tips-list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .tip-item {
        display: flex;
        align-items: flex-start;
        gap: 0.5rem;
    }

    .evaluacion-estado .alert {
        margin: 0;
    }

    @@media (max-width: 768px) {
        .curso-title

    {
        font-size: 1.8rem;
    }

    .subcurso-card {
        flex-direction: column;
        gap: 1rem;
    }

    .subcurso-actions {
