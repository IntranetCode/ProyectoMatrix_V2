    }

    .subcurso-badges {
        display: flex;
        gap: 0.5rem;
        flex-shrink: 0;
        margin-left: 1rem;
    }

    .subcurso-description {
        color: var(--gray-600);
        margin-bottom: 1rem;
        line-height: 1.5;
    }

    .subcurso-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .meta-item {
        display: flex;
        align-items: center;
        font-size: 0.9rem;
        color: var(--gray-600);
    }

    .subcurso-progress {
        margin-bottom: 1rem;
    }

    .progress-sm {
        height: 6px;
    }

    .progress-xs {
        height: 4px;
    }

    .subcurso-actions {
        flex-shrink: 0;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 0.5rem;
    }

    .btn-universidad {
        background: var(--universidad-primary);
        color: white;
        border: none;
        border-radius: 6px;
        padding: 0.5rem 1rem;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
    }

