@model IEnumerable<ProyectoMatrix.Models.ComunicadoListItemVM>

@{
    Layout = "_LayoutComunicados";
    ViewData["Title"] = "Gestionar Comunicados";
    var tieneResultados = Model != null && Model.Any();
}

<link href="~/css/stylesComunicadosGestionar.css" rel="stylesheet" />

<h2>Gestionar Comunicados</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a class="btn btn-primary" asp-action="Crear">Crear Nuevo Comunicado</a>

    <form method="get" asp-action="Gestionar" class="d-flex" role="search">
        <input name="q" class="form-control me-2" type="search" placeholder="Buscar por titulo..." />
        <button class="btn btn-outline-success" type="submit">Buscar</button>
    </form>
</div>

@if (!tieneResultados)
{
    <div class="alert alert-info">No hay comunicados para mostrar.</div>
}
else
{
    <div class="table-responsive">
    <table class="table table-striped table-bordered align-middle">
        <thead>
            <tr>
                <th style="width: 120px;">Fecha</th>
                <th>Título</th>
                <th style="width: 120px;">Imagen</th>
                <th>Dirigido a:</th>
                <th style="width: 200px;">Acciones</th>

                @*Se agregara la columna metricas en latabla de gestionar *@
                <th>Métricas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.FechaCreacion.ToString("dd/MM/yyyy")</td>
                    <td>
                        <div class="fw-semibold">@c.NombreComunicado</div>
                        <div class="text-muted small">@c.Descripcion</div>
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(c.Imagen))
                        {
                            <img src="@c.Imagen" alt="Imagen Comunicado" style="max-height: 80px; max-width: 110px; object-fit:cover;" />
                        }
                        else
                        {
                            <span>No hay imagen</span>
                        }
                    </td>
                    <td>@(string.IsNullOrWhiteSpace(c.DirigidoA) ? "-" : c.DirigidoA)</td>
                    <td class="text-nowrap">
                        <a asp-action="Editar" asp-route-id="@c.ComunicadoID" class="btn btn-sm btn-outline-primary me-1">
                            Editar
                        </a>
                        <form asp-action="Eliminar" method="post" class="d-inline"
                              onsubmit="return confirm('¿Está seguro de que desea eliminar el comunicado @c.NombreComunicado ?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@c.ComunicadoID" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                Eliminar
                            </button>
                        </form>
                    </td>
                    @*aGREgué la nueva columna de metricas *@
                    <td >
                        <span class="chip-metric">
                                🧑💻 @c.Lectores
                        </span>
                            <button type="button"
                                    class="btn btn-sm btn-outline-secondary ms-2"
                                    onclick="abrirStats(@c.ComunicadoID)"
                                    data-bs-toggle="modal"
                                    data-bs-target="#statsModal">
                                Ver
                            </button>
                        </td>
                </tr>
            }
        </tbody>
    </table>

    @*Se agrego un modal que muestra los graficos*@

        <div class="modal fade" id="statsModal" tabindex="-1" aria-labelledby="statsModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-md modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="statsModalLabel">Estadísticas del comunicado</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        <div id="statsLoading" class="text-center py-3" style="display:none;">Cargando…</div>

                        <div id="statsError" class="alert alert-danger d-none">No se pudieron cargar las estadísticas.</div>

                        <div id="statsContent" class="d-none">
                            <div class="kpi-row">
                                <div class="kpi">
                                    <div class="kpi-label">Lectores</div>
                                    <div class="kpi-value" id="mLectores">—</div>
                                </div>
                                <div class="kpi">
                                    <div class="kpi-label">Destinatarios</div>
                                    <div class="kpi-value" id="mDestinatarios">—</div>
                                </div>
                                <div class="kpi">
                                    <div class="kpi-label">% leído</div>
                                    <div class="kpi-value" id="mPorcentaje">—</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <small class="text-muted">Estas métricas se calculan en tiempo real.</small>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>


    </div>
}

@*Se agregó un Scrip para traer y pintarmetricas*@
@section Scripts {
    <script>
        function abrirStats(id){
          // estados UI
          const loading = document.getElementById('statsLoading');
          const content  = document.getElementById('statsContent');
          const errorBox = document.getElementById('statsError');

          loading.style.display = '';
          content.classList.add('d-none');
          errorBox.classList.add('d-none');
          document.getElementById('mLectores').textContent = '—';
          document.getElementById('mDestinatarios').textContent = '—';
          document.getElementById('mPorcentaje').textContent = '—';

          fetch('@Url.Action("Estadisticas", "Comunicados")?id=' + encodeURIComponent(id))
            .then(r => r.ok ? r.json() : Promise.reject())
            .then(data => {
              // pinta los KPIs
              document.getElementById('mLectores').textContent      = (data.lectores ?? 0);
              document.getElementById('mDestinatarios').textContent = (data.destinatarios ?? 0);
              const pct = data.porcentaje ? Number(data.porcentaje).toFixed(1) : '0.0';
              document.getElementById('mPorcentaje').textContent = pct + '%';

              // muestra contenido
              loading.style.display = 'none';
              content.classList.remove('d-none');
            })
            .catch(() => {
              loading.style.display = 'none';
              errorBox.classList.remove('d-none');
            });
        }
    </script>
}
