@using ProyectoMatrix.Models
@model List<EmpresaModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Selecciona tu empresa</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Estilo personalizado -->
    <link href="~/css/empresas.css" rel="stylesheet" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/favicon.png" />
</head>
<body class="light-mode">

    <!-- Loader -->
    <div id="loader" class="loader-wrapper">
        <div class="loader"></div>
    </div>

    <!-- Encabezado -->
    <div class="header-bar d-flex justify-content-between align-items-center px-4">
        <h2 class="mb-0">Bienvenido a nuestra Intranet</h2>
        <button class="btn btn-outline-light btn-sm" id="toggleMode">
            <i class="fas fa-moon me-1"></i> Modo Oscuro
        </button>
    </div>

    <!-- Subtítulo -->
    <div class="subtitulo">
        <p>Selecciona tu empresa para continuar</p>
    </div>

    <!-- Contenedor de empresas -->
    <div class="empresa-container container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 justify-content-center">
            @foreach (var empresa in Model)
            {
                <div class="col d-flex justify-content-center animate-fade">
                    <form asp-controller="Home" asp-action="Seleccionar" method="post">
                        <input type="hidden" name="id" value="@empresa.Id" />
                        <button type="submit" class="empresa-card shadow-lg w-100">
                            <img src="~/Imagenes/@empresa.Logo" class="empresa-logo" alt="@empresa.Nombre" />
                        </button>
                    </form>
                </div>
            }
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer-bar">
        <div class="text-center small text-muted">
            © @DateTime.Now.Year NS Group. Todos los derechos reservados.
        </div>
    </footer>

    <!-- Scripts -->
    <script>
        // Loader
        window.addEventListener("load", function () {
            document.getElementById("loader").style.display = "none";
        });

        // Modo oscuro / claro
        const toggleButton = document.getElementById("toggleMode");
        toggleButton.addEventListener("click", function () {
            document.body.classList.toggle("dark-mode");
            document.body.classList.toggle("light-mode");
            toggleButton.innerHTML = document.body.classList.contains("dark-mode")
                ? '<i class="fas fa-sun me-1"></i> Modo Claro'
                : '<i class="fas fa-moon me-1"></i> Modo Oscuro';
        });
    </script>
</body>
</html>
