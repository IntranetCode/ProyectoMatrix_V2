            const primeraGrid = document.querySelector('.videos-grid');
            if (primeraGrid) {
                primeraGrid.innerHTML = videosFiltrados.map(video => crearVideoCard(video)).join('');
            }
        } else {
            const primeraGrid = document.querySelector('.videos-grid');
